<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.bdg.telkom.track1.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha=".65"
        android:id="@+id/jalan"
        android:src="@drawable/resize"
        android:layout_gravity="center"
         />

    <ImageView
        android:src="@drawable/logo3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/logo"
        android:alpha=".75"
        />
    <android.support.design.widget.TextInputLayout
        android:textColorHint="#F7B7C2"
        android:id="@+id/title"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="  Username"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp_hdpi"
            android:id="@+id/username"
            android:textSize="24sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/title"
        android:id="@+id/titlePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint=" Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_lock_white_24dp_hdpi"
            android:id="@+id/password"
            android:textSize="24sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:textColor="#fff"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:text="@string/txt_btn_login"
        android:id="@+id/btn_login"
        android:textColor="#fff"
    android:textSize="32sp"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/btn_out"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/titlePassword"
    android:layout_centerHorizontal="true"
    />
<Button
    android:layout_width="wrap_content"
    android:id="@+id/tes"
    android:text="tes"
    android:onClick="invokeLogin"
    android:layout_height="wrap_content"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/note_sign"
        android:id="@+id/tv_sign"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:paddingBottom="30dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/btn_login"
        />

</RelativeLayout>
</ScrollView>