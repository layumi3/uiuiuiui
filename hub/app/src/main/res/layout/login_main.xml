<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    tools:context="com.example.android.hub.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha=".65"
        android:id="@+id/jalan"
        android:src="@drawable/resize"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:alpha=".75"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Username"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_account_circle_white_24dp_hdpi"
        android:id="@+id/tv_username"
        android:textSize="30sp"
        android:layout_below="@id/logo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Password"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_lock_white_24dp_hdpi"
        android:id="@+id/tv_password"
        android:textSize="36sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:textColor="#fff"
        android:layout_below="@id/tv_username"
         />
    <Button
        android:text="@string/txt_btn_login"
        android:id="@+id/btn_login"
        android:textSize="32sp"
        android:alpha=".50"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/note_signUp"
        android:id="@+id/tv_signUp"
        android:textSize="24sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:paddingBottom="30dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
</ScrollView>